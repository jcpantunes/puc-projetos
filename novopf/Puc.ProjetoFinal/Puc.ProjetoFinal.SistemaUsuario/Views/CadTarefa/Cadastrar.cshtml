@model Puc.ProjetoFinal.SistemaUsuario.Models.TarefaModel

@{
    ViewData["Title"] = "Cadastrar Tarefa";
    Layout = "~/Views/Shared/_Layout.2.cshtml";
}

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Salvar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                <div class="form-group" style="display:none" >
                    <label asp-for="IdTarefa" class="control-label"></label>
                    <input asp-for="IdTarefa" class="form-control" />
                    <span asp-validation-for="IdTarefa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" data-val="true" data-val-required="O campo Titulo deve ser preenchido." class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DtTarefa" class="control-label"></label>
                    <input asp-for="DtTarefa" class="form-control" />
                    <span asp-validation-for="DtTarefa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdFuncionario" class="control-label"></label>
                    <select asp-for="IdFuncionario" asp-items="@ViewBag.ListaFuncionarios" class="dropdown-menu form-control"></select>
                    <span asp-validation-for="IdFuncionario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Retornar" class="btn">Retornar</a>
                    <input type="submit" value="Salvar" class="btn" />
                </div>
            </form>
        </div>
    </div>

@model FuncionarioModel

@{
    ViewData["Title"] = "Cadastrar Funcionario";
    Layout = "~/Views/Shared/_Layout.2.cshtml";
}

<br />
<h2>Criar Funcion√°rio</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Salvar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group" style="display:none" >
                <label asp-for="IdFuncionario" class="control-label"></label>
                <input asp-for="IdFuncionario" class="form-control" />
                <span asp-validation-for="IdFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn" />
            </div>
        </form>
    </div>
</div>
